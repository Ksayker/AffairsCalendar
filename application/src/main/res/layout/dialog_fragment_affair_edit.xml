<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialog_fragment_affair_edit_name_label"
        android:textSize="@dimen/dialog_fragment_affair_edit_name_label_size"
        />
    <EditText
        android:id="@+id/dialog_fragment_affair_edit_et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialog_fragment_affair_edit_start_label"
        android:textSize="@dimen/dialog_fragment_affair_edit_start_label_size"
        />
    <EditText
        android:id="@+id/dialog_fragment_affair_edit_et_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialog_fragment_affair_edit_end_label"
        android:textSize="@dimen/dialog_fragment_affair_edit_end_label_size"
        />
    <EditText
        android:id="@+id/dialog_fragment_affair_edit_et_end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        />
</LinearLayout>