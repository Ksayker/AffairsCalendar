<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/color_calendar_date_background_deselected"
    >
    <TextView
        android:id="@+id/item_grid_view_day_of_week"
        android:layout_width="44sp"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:textSize="16sp"
        android:textColor="@color/color_calendar_day_of_week_names"
        android:gravity="center"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        >
        <ksayker.affairscalendar.views.DateTextView
            android:id="@+id/item_grid_view_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/item_calendar_greed_date_text_size"
            android:gravity="center"
            android:background="@drawable/background_date_deselected"
            />
        <TextView
            android:id="@+id/item_grid_view_affairs_number"
            android:layout_margin="@dimen/item_calendar_greed_affairs_number_margin"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:textSize="@dimen/item_calendar_greed_affairs_number_text_size"
            android:textColor="@color/color_calendar_greed_affairs_number_text"
            android:gravity="center"
            android:background="@drawable/background_affairs_number"
            />
    </FrameLayout>

</LinearLayout>